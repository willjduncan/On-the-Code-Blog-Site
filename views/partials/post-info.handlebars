<article class="post post-box">
    <div class="title">
        <h3>{{title}}</h3>
    <span class="post-header">
        {{user.username}} on {{format_date created_at}}
    </span>
    </div>
  <div class="meta">
    <div>
    {{content}}
    </div>
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>